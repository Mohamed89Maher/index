                    const data = await response.json();
                    if (data.binancecoin && data.binancecoin.usd) {
                        currentBNBPrice = data.binancecoin.usd;
                        console.log(`Ø³Ø¹Ø± BNB Ù…Ù† CoinGecko: ${currentBNBPrice}`);
