        async function loadPhaseInfo() {
            try {
                if (!contract) return;

                const phaseInfo = await contract.methods.getCurrentPhaseInfo().call();
                currentPhaseInfo = phaseInfo;

                // Update phase display
                document.getElementById('currentPhase').textContent = `Ø§Ù„Ù…Ø±Ø­Ù„Ø© ${phaseInfo.phaseNumber}`;
                document.getElementById('tokenPrice').textContent = `${(phaseInfo.priceUSD / 1000000).toFixed(6)}`;
                document.getElementById('soldTokens').textContent = formatNumber(phaseInfo.sold / 1e18);
                document.getElementById('remainingTokens').textContent = formatNumber(phaseInfo.remaining / 1e18);

                // Update progress bar
                const progress = (phaseInfo.sold * 100) / phaseInfo.cap;
                document.getElementById('progressBar').style.width = `${progress}%`;
                document.getElementById('progressText').textContent = `${progress.toFixed(1)}%`;

                // Set phase end time for countdown
                phaseEndTime = parseInt(phaseInfo.endTime) * 1000;

            } catch (error) {
                console.error('Ø®Ø·Ø£ ÙÙŠ ØªØ­Ù…ÙŠÙ„ Ù…Ø¹Ù„ÙˆÙ…Ø§Øª Ø§Ù„Ù…Ø±Ø­Ù„Ø©:', error);
